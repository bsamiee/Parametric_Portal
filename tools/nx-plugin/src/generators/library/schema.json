{
    "$schema": "https://json-schema.org/schema",
    "$id": "ParametricLibrary",
    "title": "Create Library",
    "description": "Generate a new library following workspace conventions (Effect/Option, single B constant)",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "Library name (kebab-case)",
            "$default": { "$source": "argv", "index": 0 },
            "x-prompt": "What name would you like for the library?"
        },
        "description": {
            "type": "string",
            "description": "Library description"
        },
        "directory": {
            "type": "string",
            "description": "Directory to place the library",
            "default": "packages"
        },
        "tags": {
            "type": "string",
            "description": "Comma-separated tags for the library"
        }
    },
    "required": ["name"]
}
