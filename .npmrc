# --- [NODE_VERSION_ENFORCEMENT] -----------------------------------------------
engine-strict=true                      # Fail if Node/pnpm versions mismatch
use-node-version=25.2.1                 # Lock Node.js to 25.2.1
manage-package-manager-versions=true    # Auto-manage pnpm version

# --- [DEPENDENCY_RESOLUTION] --------------------------------------------------
auto-install-peers=true                 # Auto-install missing peer deps
strict-peer-dependencies=false          # Allow flexible peer deps
dedupe-peer-dependents=true             # Deduplicate shared peer deps
resolution-mode=highest                 # Always use highest versions
save-exact=true                         # No version ranges (^ or ~)

# --- [WORKSPACE_CONFIGURATION] ------------------------------------------------
prefer-workspace-packages=true          # Use local packages first
link-workspace-packages=deep            # Deep link all workspace deps
save-workspace-protocol=rolling         # Use workspace:* protocol
shared-workspace-lockfile=true          # Single lockfile at root
recursive-install=true                  # Install all workspace packages

# --- [PERFORMANCE_OPTIMIZATIONS] ----------------------------------------------
side-effects-cache=true                 # Cache install scripts
side-effects-cache-readonly=false       # Allow cache creation
symlink=true                            # Use symlinks for packages

# --- [MODULE_STRUCTURE] -------------------------------------------------------
node-linker=isolated                    # Strict dependency isolation
public-hoist-pattern=[]                 # Nothing hoisted publicly

# --- [NETWORK_AND_REGISTRY] ---------------------------------------------------
strict-ssl=true                         # Enforce SSL certificates
fetch-retries=3                         # Retry failed downloads
fetch-retry-factor=2                    # Exponential backoff multiplier
fetch-retry-mintimeout=10000            # Min retry delay (10s)
fetch-retry-maxtimeout=60000            # Max retry delay (60s)
