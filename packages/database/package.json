{
  "name": "@parametric-portal/database",
  "version": "1.0.5",
  "type": "module",
  "exports": {
    "./client": {
      "types": "./src/client.ts",
      "import": "./src/client.ts",
      "default": "./src/client.ts"
    },
    "./models": {
      "types": "./src/models.ts",
      "import": "./src/models.ts",
      "default": "./src/models.ts"
    },
    "./migrator": {
      "types": "./src/migrator.ts",
      "import": "./src/migrator.ts",
      "default": "./src/migrator.ts"
    },
    "./repositories": {
      "types": "./src/repositories.ts",
