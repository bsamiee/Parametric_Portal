{
    "name": "@parametric-portal/theme",
    "version": "2.0.1",
    "type": "module",
    "exports": {
        "./base.css": "./src/base.css",
        "./colors": {
            "types": "./src/colors.ts",
            "import": "./src/colors.ts",
            "default": "./src/colors.ts"
        },
        "./component-wiring": {
            "types": "./src/component-wiring.ts",
            "import": "./src/component-wiring.ts",
            "default": "./src/component-wiring.ts"
        },
        "./plugin": {
            "types": "./src/plugin.ts",
            "import": "./src/plugin.ts",
            "default": "./src/plugin.ts"
        },
        "./theme": {
            "types": "./src/theme.ts",
            "import": "./src/theme.ts",
            "default": "./src/theme.ts"
        }
    },
    "scripts": {
