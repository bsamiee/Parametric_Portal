{
    "name": "parametric-portal",
    "version": "0.4.0",
    "private": true,
    "type": "module",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "//test-scripts": {
        "test": "Run all root-tests once (clears vitest cache, detects hanging processes)",
        "test:watch": "Watch mode for root-tests with incremental reruns",
        "test:coverage": "Run root-tests with v8 coverage (clears stale cache + reports)",
        "test:mutate": "Stryker mutation testing (incremental; pnpm test:mutate:force for fresh run)",
        "test:mutate:force": "Stryker mutation testing with --force (bypasses incremental cache)",
        "test:ui": "Vitest UI with coverage enabled in browser",
        "test:debug": "Single-threaded run with Node inspector for debugging"
    },
    "scripts": {
        "clean": "rm -rf .nx/cache node_modules/.cache packages/*/dist apps/*/dist packages/*/.vite-inspect apps/*/.vite-inspect test-results/mutation/stryker-incremental.json",
        "cs:check": "pnpm exec nx run-many -t restore:cs,build:cs --parallel=4",
        "cs:check:affected": "pnpm exec nx affected -t restore:cs,build:cs --base=origin/main --parallel=4",
        "e2e": "pnpm exec nx e2e",
        "e2e:report": "playwright show-report test-results/e2e-report",
        "meta:check": "knip --treat-config-hints-as-errors && sherif",
        "nx:affected": "pnpm exec nx affected -t build,test,typecheck,check",
        "nx:build": "pnpm exec nx run-many -t build",
        "nx:build:libs": "pnpm exec nx run-many -t build --projects=@parametric-portal/types,@parametric-portal/theme,@parametric-portal/runtime,@parametric-portal/components,@parametric-portal/devtools",
        "nx:check": "pnpm exec nx run-many -t check",
        "nx:fix": "pnpm exec nx run-many -t fix",
        "nx:graph": "pnpm exec nx graph",
        "nx:test": "pnpm exec nx run-many -t test",
        "nx:typecheck": "pnpm exec nx run-many -t typecheck",
        "py:check": "uv run ruff check . && uv run ruff format --check . && uv run ty check --error-on-warning",
        "prepare": "lefthook install",
        "quality": "pnpm ts:check && pnpm cs:check && pnpm py:check && pnpm meta:check",
        "quality:affected": "pnpm ts:check:affected && pnpm cs:check:affected && pnpm py:check && pnpm meta:check",
        "reset": "pnpm clean && pnpm install && pnpm nx:build:libs",
        "sonar": "pnpm exec nx affected -t test -- --coverage && npx @sonar/scan",
        "sonar:status": "curl -sf -u \"${SONAR_TOKEN}:\" 'https://sonarcloud.io/api/qualitygates/project_status?projectKey=bsamiee_Parametric_Portal' | jq -r '.projectStatus.status'",
        "test": "rm -rf node_modules/.vitest && vitest run --project root-tests --reporter tree --reporter hanging-process",
        "test:coverage": "rm -rf node_modules/.vitest coverage && vitest run --project root-tests --coverage",
        "test:debug": "vitest run --project root-tests --no-file-parallelism --inspect-brk",
        "test:mutate": "stryker run",
        "test:mutate:force": "stryker run --force",
        "test:ui": "vitest --ui --project root-tests --coverage.enabled",
        "test:watch": "vitest --project root-tests",
        "ts:check": "pnpm exec nx run-many -t typecheck,check --parallel=4",
        "ts:check:affected": "pnpm exec nx affected -t typecheck,check --base=origin/main --parallel=4",
        "tools:tokens": "tsx tools/scripts/count-tokens.ts"
    },
    "devDependencies": {
        "@anthropic-ai/tokenizer": "catalog:",
        "@berenddeboer/nx-biome": "catalog:",
        "@biomejs/biome": "catalog:",
        "@ast-grep/cli": "catalog:",
        "@effect/experimental": "catalog:",
        "@effect/platform": "catalog:",
        "@effect/platform-browser": "catalog:",
        "@effect/vitest": "catalog:",
        "@mermaid-js/mermaid-cli": "catalog:",
        "@nx/dotnet": "catalog:",
        "@nx/docker": "catalog:",
        "@nx/js": "catalog:",
        "@nx/playwright": "catalog:",
        "@nx/react": "catalog:",
        "@nx/vite": "catalog:",
        "@nx/vitest": "catalog:",
        "@octokit/rest": "catalog:",
        "@playwright/test": "catalog:",
        "@radix-ui/react-label": "catalog:",
        "@radix-ui/react-separator": "catalog:",
        "@radix-ui/react-slot": "catalog:",
        "@rollup/plugin-typescript": "catalog:",
        "@sonar/scan": "catalog:",
        "@stryker-mutator/core": "catalog:",
        "@stryker-mutator/typescript-checker": "catalog:",
        "@stryker-mutator/vitest-runner": "catalog:",
        "@swc-node/register": "catalog:",
        "@swc/core": "catalog:",
        "@tailwindcss/vite": "catalog:",
        "@tanstack/react-table": "catalog:",
        "@tanstack/react-virtual": "catalog:",
        "@types/k6": "catalog:",
        "@types/node": "catalog:",
        "@types/react": "catalog:",
        "@types/react-dom": "catalog:",
        "@vitejs/plugin-react": "catalog:",
        "@vitest/browser-playwright": "catalog:",
        "@vitest/coverage-v8": "catalog:",
        "@vitest/ui": "catalog:",
        "babel-plugin-react-compiler": "catalog:",
        "browserslist": "catalog:",
        "class-variance-authority": "catalog:",
        "clsx": "catalog:",
        "cmdk": "catalog:",
        "date-fns": "catalog:",
        "effect": "catalog:",
        "fast-check": "catalog:",
        "happy-dom": "catalog:",
        "immer": "catalog:",
        "jsdom": "catalog:",
        "jspdf": "catalog:",
        "jszip": "catalog:",
        "knip": "catalog:",
        "lefthook": "catalog:",
        "lightningcss": "catalog:",
        "lucide-react": "catalog:",
        "nx": "catalog:",
        "react-aria": "catalog:",
        "react-compiler-runtime": "catalog:",
        "react-stately": "catalog:",
        "rollup-plugin-visualizer": "catalog:",
        "sharp": "catalog:",
        "sherif": "catalog:",
        "tailwind-merge": "catalog:",
        "tailwindcss": "catalog:",
        "testcontainers": "catalog:",
        "tslib": "catalog:",
        "tsx": "catalog:",
        "typescript": "catalog:",
        "vite": "catalog:",
        "vite-plugin-compression": "catalog:",
        "vite-plugin-csp": "catalog:",
        "vite-plugin-image-optimizer": "catalog:",
        "vite-plugin-inspect": "catalog:",
        "vite-plugin-pwa": "catalog:",
        "vite-plugin-svgr": "catalog:",
        "vite-plugin-webfont-dl": "catalog:",
        "vite-tsconfig-paths": "catalog:",
        "vitest": "catalog:",
        "zustand": "catalog:"
    },
    "browserslist": [
        "baseline widely available",
        "not dead",
        "not ie <= 11"
    ],
    "engines": {
        "node": "25.2.1"
    },
    "knip": {
        "ignoreBinaries": [
            "hadolint",
            "jq"
        ],
        "ignore": [
            ".nx/**"
        ],
        "workspaces": {
            ".": {
                "entry": [
                    ".github/scripts/*.ts",
                    "tools/scripts/*.ts"
                ],
                "ignoreDependencies": [
                    "^@(fast-check|mermaid-js|octokit|radix-ui|tanstack)/",
                    "^@effect/(experimental|platform-browser|vitest)$",
                    "^@nx/(js|react)$",
                    "^@types/(k6|react|react-dom)$",
                    "^(babel-plugin-react-compiler|browserslist|class-variance-authority|clsx|cmdk|date-fns|fast-check|immer|jspdf|jszip|lucide-react|react-aria|react-compiler-runtime|react-stately|tailwind-merge|tailwindcss|testcontainers|zustand)$"
                ]
            },
            "infrastructure": {
                "entry": [
                    "src/platform.ts"
                ]
            },
            "packages/database": {
                "entry": [
                    "migrations/*.ts"
                ]
            }
        }
    },
    "packageManager": "pnpm@10.29.3",
    "pnpm": {
        "overrides": {
            "jiti": "2.6.1",
            "node-forge": "1.3.3",
            "puppeteer": "24.34.0",
            "axios": "1.13.5",
            "rollup": "4.57.1"
        },
        "peerDependencyRules": {
            "allowedVersions": {
                "puppeteer": "24.34.0",
                "typescript": "6.0.0-dev.20251125",
                "vitest": "4.0.18"
            }
        }
    }
}
