{
    "name": "parametric-portal",
    "version": "0.4.0",
    "private": true,
    "type": "module",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "clean": "rm -rf .nx/cache node_modules/.cache packages/*/dist apps/*/dist packages/*/.vite-inspect apps/*/.vite-inspect",
        "e2e": "nx e2e",
        "e2e:report": "playwright show-report test-results/e2e-report",
        "e2e:ui": "nx e2e --ui",
        "nx:affected": "nx affected -t build,test,typecheck,check",
        "nx:build": "nx run-many -t build",
        "nx:build:libs": "nx run-many -t build --projects=@parametric-portal/types,@parametric-portal/theme,@parametric-portal/runtime,@parametric-portal/components,@parametric-portal/devtools",
        "nx:check": "nx run-many -t check",
        "nx:fix": "nx run-many -t fix",
        "nx:graph": "nx graph",
        "nx:test": "nx run-many -t test",
        "nx:typecheck": "nx run-many -t typecheck",
        "prepare": "lefthook install",
        "quality": "pnpm exec nx run-many -t typecheck,check,infra:lint && knip && sherif",
        "quality:affected": "pnpm exec nx affected -t typecheck,check,infra:lint --base=origin/main && knip && sherif",
        "reset": "pnpm clean && pnpm install && pnpm nx:build:libs",
        "sonar": "pnpm nx affected -t test -- --coverage && npx @sonar/scan",
        "sonar:scan": "npx @sonar/scan",
        "sonar:status": "curl -sf -u \"${SONAR_TOKEN}:\" 'https://sonarcloud.io/api/qualitygates/project_status?projectKey=bsamiee_Parametric_Portal' | jq -r '.projectStatus.status'",
        "test:mutate": "stryker run",
        "test:server": "vitest run --project root-tests tests/packages/server/",
        "test:unit": "vitest run --project root-tests",
        "tools:knip": "knip",
        "tools:sherif": "sherif",
        "tools:tokens": "tsx tools/scripts/count-tokens.ts"
    },
    "devDependencies": {
        "@anthropic-ai/tokenizer": "catalog:",
        "@berenddeboer/nx-biome": "catalog:",
        "@biomejs/biome": "catalog:",
        "@effect/experimental": "catalog:",
        "@effect/platform": "catalog:",
        "@effect/platform-browser": "catalog:",
        "@effect/vitest": "catalog:",
        "@fast-check/vitest": "catalog:",
        "@mermaid-js/mermaid-cli": "catalog:",
        "@nx/docker": "catalog:",
        "@nx/js": "catalog:",
        "@nx/playwright": "catalog:",
        "@nx/react": "catalog:",
        "@nx/vite": "catalog:",
        "@nx/vitest": "catalog:",
        "@octokit/rest": "catalog:",
        "@playwright/test": "catalog:",
        "@radix-ui/react-label": "catalog:",
        "@radix-ui/react-separator": "catalog:",
        "@radix-ui/react-slot": "catalog:",
        "@rollup/plugin-typescript": "catalog:",
        "@sonar/scan": "catalog:",
        "@stryker-mutator/core": "catalog:",
        "@stryker-mutator/typescript-checker": "catalog:",
        "@stryker-mutator/vitest-runner": "catalog:",
        "@swc-node/register": "catalog:",
        "@swc/core": "catalog:",
        "@tailwindcss/vite": "catalog:",
        "@tanstack/react-table": "catalog:",
        "@tanstack/react-virtual": "catalog:",
        "@types/k6": "catalog:",
        "@types/node": "catalog:",
        "@types/react": "catalog:",
        "@types/react-dom": "catalog:",
        "@vitejs/plugin-react": "catalog:",
        "@vitest/browser-playwright": "catalog:",
        "@vitest/coverage-v8": "catalog:",
        "@vitest/ui": "catalog:",
        "babel-plugin-react-compiler": "catalog:",
        "browserslist": "catalog:",
        "class-variance-authority": "catalog:",
        "clsx": "catalog:",
        "cmdk": "catalog:",
        "date-fns": "catalog:",
        "effect": "catalog:",
        "fast-check": "catalog:",
        "happy-dom": "catalog:",
        "immer": "catalog:",
        "jspdf": "catalog:",
        "jszip": "catalog:",
        "knip": "catalog:",
        "lefthook": "catalog:",
        "lightningcss": "catalog:",
        "lucide-react": "catalog:",
        "nx": "catalog:",
        "react-aria": "catalog:",
        "react-compiler-runtime": "catalog:",
        "react-stately": "catalog:",
        "rollup-plugin-visualizer": "catalog:",
        "sharp": "catalog:",
        "sherif": "catalog:",
        "tailwind-merge": "catalog:",
        "tailwindcss": "catalog:",
        "testcontainers": "catalog:",
        "tslib": "catalog:",
        "tsx": "catalog:",
        "typescript": "catalog:",
        "vite": "catalog:",
        "vite-plugin-compression": "catalog:",
        "vite-plugin-csp": "catalog:",
        "vite-plugin-image-optimizer": "catalog:",
        "vite-plugin-inspect": "catalog:",
        "vite-plugin-pwa": "catalog:",
        "vite-plugin-svgr": "catalog:",
        "vite-plugin-webfont-dl": "catalog:",
        "vite-tsconfig-paths": "catalog:",
        "vitest": "catalog:",
        "zustand": "catalog:"
    },
    "browserslist": [
        "baseline widely available",
        "not dead",
        "not ie <= 11"
    ],
    "engines": {
        "node": "25.2.1"
    },
    "knip": {
        "ignoreBinaries": [
            "hadolint"
        ],
        "ignore": [
            ".nx/**"
        ],
        "workspaces": {
            ".": {
                "entry": [
                    ".github/scripts/*.ts",
                    "tools/scripts/*.ts"
                ]
            },
            "packages/database": {
                "entry": [
                    "migrations/*.ts"
                ]
            }
        }
    },
    "packageManager": "pnpm@10.29.3",
    "pnpm": {
        "overrides": {
            "jiti": "2.6.1",
            "node-forge": "1.3.3",
            "puppeteer": "24.34.0",
            "axios": "1.13.5",
            "rollup": "4.57.1"
        },
        "peerDependencyRules": {
            "allowedVersions": {
                "puppeteer": "24.34.0",
                "typescript": "6.0.0-dev.20251125",
                "vitest": "4.0.18"
            }
        }
    }
}
