{
    "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
    "plugins": [],
    "vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true, "defaultBranch": "main" },
    "files": {
        "ignoreUnknown": true,
        "includes": [
            "**",
            "!.claude/settings.json",
            "!.github/n8n-workflows",
            "!.mcp.json",
            "!packages/server/src",
            "!apps/api/src"
        ]
    },
    "assist": {
        "actions": { "source": { "useSortedProperties": "on", "organizeImports": "on", "useSortedKeys": "on" } }
    },
    "formatter": { "lineWidth": 120, "lineEnding": "lf", "indentWidth": 4, "indentStyle": "space" },
    "linter": {
        "domains": { "react": "all", "project": "all", "test": "all" },
        "rules": {
            "correctness": {
                "noUnusedImports": "error",
                "noUnusedVariables": "error",
                "useExhaustiveDependencies": "error",
                "noVoidTypeReturn": "error",
                "useYield": "error",
                "useImportExtensions": "off"
            },
            "style": {
                "noDefaultExport": "error",
                "noParameterAssign": { "level": "error", "options": { "propertyAssignment": "deny" } },
                "useBlockStatements": "off",
                "useConst": "error",
                "useTemplate": "error",
                "useImportType": "error",
                "noNegationElse": "error",
                "noUselessElse": "error",
                "useShorthandAssign": "error",
                "useConsistentBuiltinInstantiation": "error",
                "useForOf": "off"
            },
            "complexity": {
                "noCommaOperator": "error",
                "noBannedTypes": "error",
                "noExcessiveCognitiveComplexity": { "level": "error", "options": { "maxAllowedComplexity": 25 } },
                "noForEach": "off",
                "noStaticOnlyClass": "error",
                "noUselessStringRaw": "off",
                "useArrowFunction": "error",
                "useFlatMap": "error",
                "useLiteralKeys": "off",
                "useOptionalChain": "error"
            },
            "suspicious": {
                "noConsole": {
                    "level": "warn",
                    "options": { "allow": ["assert", "debug", "error", "info", "trace", "warn"] }
                },
                "noConstEnum": "error",
                "noDoubleEquals": "error",
                "noExplicitAny": "error",
                "noVar": "error"
            },
            "performance": {
                "noAccumulatingSpread": "error",
                "noBarrelFile": "error",
                "noDelete": "error",
                "noReExportAll": "error"
            },
            "security": {
                "noDangerouslySetInnerHtml": "off",
                "noSecrets": "off"
            },
            "nursery": {
                "noImportCycles": "error",
                "noFloatingPromises": "error",
                "noIncrementDecrement": "error",
                "noScriptUrl": "error",
                "useAwaitThenable": "error",
                "useConsistentArrowReturn": "error",
                "useExhaustiveSwitchCases": "error"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "jsxQuoteStyle": "single",
            "trailingCommas": "all",
            "semicolons": "always",
            "arrowParentheses": "always"
        },
        "parser": { "unsafeParameterDecoratorsEnabled": true }
    },
    "json": { "formatter": { "trailingCommas": "none" }, "parser": { "allowComments": true } },
    "css": {
        "linter": { "enabled": true },
        "formatter": { "enabled": true, "quoteStyle": "single" },
        "parser": { "cssModules": true, "tailwindDirectives": true }
    },
    "html": { "formatter": { "enabled": true, "lineWidth": 120, "indentWidth": 4, "indentStyle": "space" } },
    "overrides": [
        {
            "includes": ["**/*.config.ts", "**/*.config.js", "**/*.config.mjs"],
            "linter": { "rules": { "style": { "noDefaultExport": "off" } } }
        },
        {
            "includes": ["biome.json"],
            "assist": { "actions": { "source": { "useSortedKeys": "off" } } }
        },
        {
            "includes": ["*.jsonc"],
            "json": { "formatter": { "trailingCommas": "all" }, "parser": { "allowTrailingCommas": true } }
        },
        {
            "includes": ["*.vue", "*.svelte"],
            "html": { "formatter": { "indentScriptAndStyle": false } }
        },
        {
            "includes": ["*.astro"],
            "linter": { "rules": { "style": { "useConst": "off", "useImportType": "off" } } }
        },
        {
            "includes": ["packages/*/vite.config.ts", "packages/*/project.json"],
            "assist": { "actions": { "source": { "organizeImports": "on" } } }
        },
        {
            "includes": ["**/package.json"],
            "formatter": { "enabled": false },
            "assist": { "actions": { "source": { "useSortedKeys": "off", "useSortedProperties": "off" } } }
        },
        {
            "includes": ["**/matchers.ts", "**/types/src/*.ts", "**/core/slots.ts"],
            "formatter": {
                "enabled": false
            }
        },
        {
            "includes": [
                "packages/devtools/src/boundary.tsx",
                "packages/devtools/src/overlay.tsx",
                "packages/components-next/src/**/*.tsx",
                "apps/**/*.tsx"
            ],
            "linter": { "rules": { "style": { "useComponentExportOnlyModules": "off" } } }
        },
        {
            "includes": ["**/vite-env.d.ts"],
            "linter": {
                "rules": {
                    "correctness": { "noUnusedVariables": "off" }
                }
            }
        },
        {
            "includes": [
                "**/*.spec.ts",
                "**/*.test.ts",
                "tests/**/*.ts",
                ".github/scripts/**/*.ts",
                "packages/runtime/src/hooks/form.ts"
            ],
            "linter": {
                "rules": {
                    "nursery": { "useAwaitThenable": "off" }
                }
            }
        }
    ]
}
