{
    "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
    "plugins": [],
    "vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true, "defaultBranch": "main" },
    "files": { "ignoreUnknown": true, "includes": ["**", "!.claude/settings.json", "!.github/n8n-workflows"] },
    "assist": {
        "actions": { "source": { "useSortedProperties": "on", "organizeImports": "on", "useSortedKeys": "on" } }
    },
    "formatter": { "lineWidth": 120, "lineEnding": "lf", "indentWidth": 4, "indentStyle": "space" },
    "linter": {
        "domains": { "react": "all", "project": "all", "test": "all" },
        "rules": {
            "correctness": {
                "noUnusedImports": "error",
                "noUnusedVariables": "error",
                "useExhaustiveDependencies": "error",
                "noVoidTypeReturn": "error",
                "useYield": "error",
                "useImportExtensions": "off"
            },
            "style": {
                "noDefaultExport": "error",
                "noParameterAssign": "error",
                "useBlockStatements": "error",
                "useConst": "error",
                "useTemplate": "error",
                "useImportType": "error",
                "noNegationElse": "error",
                "noUselessElse": "error",
                "useShorthandAssign": "off",
                "useConsistentBuiltinInstantiation": "error",
                "useForOf": "error",
                "useNamingConvention": {
                    "level": "error",
                    "options": {
                        "requireAscii": true,
                        "strictCase": false,
                        "conventions": [
                            { "selector": { "kind": "typeLike" }, "formats": ["PascalCase"] },
                            { "selector": { "kind": "interface" }, "formats": ["PascalCase"] },
                            { "selector": { "kind": "typeParameter" }, "formats": ["PascalCase"] },
                            {
                                "selector": { "kind": "typeProperty" },
                                "match": "(_tag|.*)",
                                "formats": ["camelCase", "PascalCase"]
                            },
                            {
                                "selector": { "kind": "objectLiteralProperty" },
                                "match": "_tag|__html|background_color|theme_color|short_name|start_url|test_coverage|(.*)",
                                "formats": ["camelCase", "PascalCase"]
                            },
                            {
                                "selector": { "kind": "const" },
                                "formats": ["camelCase", "PascalCase", "CONSTANT_CASE"]
                            },
                            { "selector": { "kind": "function" }, "formats": ["camelCase"] }
                        ]
                    }
                }
            },
            "complexity": {
                "noBannedTypes": "error",
                "noExcessiveCognitiveComplexity": { "level": "error", "options": { "maxAllowedComplexity": 25 } },
                "noForEach": "error",
                "noStaticOnlyClass": "error",
                "noUselessStringRaw": "off",
                "useArrowFunction": "error",
                "useFlatMap": "error",
                "useLiteralKeys": "off",
                "useOptionalChain": "error"
            },
            "suspicious": {
                "noConsole": {
                    "level": "warn",
                    "options": { "allow": ["assert", "debug", "error", "info", "trace", "warn"] }
                },
                "noConstEnum": "error",
                "noDoubleEquals": "error",
                "noExplicitAny": "error",
                "noVar": "error"
            },
            "performance": {
                "noAccumulatingSpread": "error",
                "noBarrelFile": "error",
                "noDelete": "error",
                "noReExportAll": "error"
            },
            "security": {
                "noDangerouslySetInnerHtml": "off"
            },
            "nursery": {
                "noFloatingPromises": "error",
                "noIncrementDecrement": "error",
                "useExhaustiveSwitchCases": "error",
                "useConsistentArrowReturn": "error"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "jsxQuoteStyle": "single",
            "trailingCommas": "all",
            "semicolons": "always",
            "arrowParentheses": "always"
        },
        "parser": { "unsafeParameterDecoratorsEnabled": true }
    },
    "json": { "formatter": { "trailingCommas": "none" }, "parser": { "allowComments": true } },
    "css": {
        "linter": { "enabled": true },
        "formatter": { "enabled": true, "quoteStyle": "single" },
        "parser": { "cssModules": true, "tailwindDirectives": true }
    },
    "html": { "formatter": { "enabled": true, "lineWidth": 120, "indentWidth": 4, "indentStyle": "space" } },
    "overrides": [
        {
            "includes": ["**/*.config.ts", "**/*.config.js", "**/*.config.mjs"],
            "linter": { "rules": { "style": { "noDefaultExport": "off" } } }
        },
        {
            "includes": ["biome.json"],
            "assist": { "actions": { "source": { "useSortedKeys": "off" } } }
        },
        {
            "includes": ["*.jsonc"],
            "json": { "formatter": { "trailingCommas": "all" }, "parser": { "allowTrailingCommas": true } }
        },
        {
            "includes": ["*.vue", "*.svelte"],
            "html": { "formatter": { "indentScriptAndStyle": false } }
        },
        {
            "includes": ["*.astro"],
            "linter": { "rules": { "style": { "useConst": "off", "useImportType": "off" } } }
        },
        {
            "includes": ["packages/*/src/**/*.ts", "packages/*/src/**/*.tsx"],
            "linter": {
                "rules": {
                    "style": {
                        "noDefaultExport": "error",
                        "useImportType": "error"
                    },
                    "correctness": {
                        "noUnusedImports": "error",
                        "noUnusedVariables": "error"
                    }
                }
            }
        },
        {
            "includes": ["packages/*/vite.config.ts", "packages/*/project.json"],
            "assist": { "actions": { "source": { "organizeImports": "on" } } }
        },
        {
            "includes": ["**/package.json"],
            "formatter": { "enabled": false },
            "assist": { "actions": { "source": { "useSortedKeys": "off", "useSortedProperties": "off" } } }
        },
        {
            "includes": ["**/matchers.ts", "**/types/src/*.ts"],
            "linter": {
                "rules": {
                    "style": { "useNamingConvention": "off" }
                }
            }
        },
        {
            "includes": [".github/scripts/**/*.ts"],
            "linter": {
                "rules": {
                    "style": { "useNamingConvention": "off" }
                }
            }
        },
        {
            "includes": ["packages/devtools/src/env.ts"],
            "linter": {
                "rules": {
                    "style": { "useNamingConvention": "off" }
                }
            }
        },
        {
            "includes": ["packages/devtools/src/boundary.tsx", "packages/devtools/src/overlay.tsx"],
            "linter": {
                "rules": {
                    "style": { "useComponentExportOnlyModules": "off" }
                }
            }
        },
        {
            "includes": ["apps/**/*.tsx"],
            "linter": {
                "rules": {
                    "style": { "useComponentExportOnlyModules": "off" }
                }
            }
        },
        {
            "includes": ["**/vite-env.d.ts"],
            "linter": {
                "rules": {
                    "correctness": { "noUnusedVariables": "off" },
                    "style": { "useNamingConvention": "off" }
                }
            }
        }
    ]
}
