{
    "compilerOptions": {
        "composite": false,
        "declaration": false,
        "declarationMap": false,
        "emitDeclarationOnly": false,
        "noEmit": true,
        "outDir": "dist",
        "paths": {
            "@parametric-portal/ai/*": ["../../packages/ai/src/*"],
            "@parametric-portal/database/*": ["../../packages/database/src/*"],
            "@parametric-portal/database/search/*": ["../../packages/database/src/search/*"],
            "@parametric-portal/server/*": ["../../packages/server/src/*"],
            "@parametric-portal/types/*": ["../../packages/types/src/*"]
        },
        "tsBuildInfoFile": "../../.nx/cache/tsbuildinfo/api.tsbuildinfo",
        "types": ["node"]
    },
    "exclude": ["node_modules", "dist"],
    "extends": "../../tsconfig.base.json",
    "include": ["src/**/*", "tests/**/*"]
}
