root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{ts,tsx,js,jsx,mts,cts}]
indent_style = space
indent_size = 4
max_line_length = 120

[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

[*.cs]
# --- [NAMESPACE_AND_IMPORTS] -----------------------------------------------
csharp_style_namespace_declarations = file_scoped:error                       # Keep namespace declarations concise and modern.
dotnet_style_namespace_match_folder = true:error                              # Enforce namespace-path alignment.
dotnet_style_require_accessibility_modifiers = always:error                   # Require explicit member accessibility.
csharp_using_directive_placement = outside_namespace:error                    # Keep using directives outside namespace blocks.
dotnet_sort_system_directives_first = true                                    # Keep System usings ordered first.
dotnet_separate_import_directive_groups = false                               # Avoid blank-line grouping in imports.
dotnet_diagnostic.IDE0005.severity = none                                     # Disabled on build: requires GenerateDocumentationFile=true.

# --- [TYPE_EXPLICITNESS] ----------------------------------------------------
csharp_style_var_for_built_in_types = false:error                             # Use explicit built-in types instead of var.
csharp_style_var_when_type_is_apparent = false:error                          # Keep explicit types even when obvious.
csharp_style_var_elsewhere = false:error                                      # Disallow var in all remaining contexts.
dotnet_style_predefined_type_for_locals_parameters_members = true:error       # Prefer C# aliases (int/string) in declarations.
dotnet_style_predefined_type_for_member_access = true:error                   # Prefer C# aliases in member access expressions.
csharp_preferred_modifier_order = public,private,protected,internal,file,static,extern,new,virtual,abstract,sealed,override,readonly,unsafe,required,volatile,async:error # Keep modifier ordering deterministic.
dotnet_style_qualification_for_field = false:error                            # Avoid unnecessary this./Me. qualification on fields.
dotnet_style_qualification_for_property = false:error                         # Avoid unnecessary this./Me. qualification on properties.
dotnet_style_qualification_for_method = false:error                           # Avoid unnecessary this./Me. qualification on methods.
dotnet_style_qualification_for_event = false:error                            # Avoid unnecessary this./Me. qualification on events.
dotnet_style_readonly_field = true:error                                      # Prefer readonly fields for immutability.
csharp_style_prefer_readonly_struct = true:error                              # Prefer readonly structs to avoid defensive copies.
csharp_style_prefer_readonly_struct_member = true:error                       # Prefer readonly struct members where possible.

# --- [CONTROL_FLOW_AND_PATTERNS] --------------------------------------------
csharp_style_pattern_matching_over_is_with_cast_check = true:error            # Prefer pattern matching over is+cast sequences.
csharp_style_pattern_matching_over_as_with_null_check = true:error            # Prefer pattern matching over as+null checks.
csharp_style_prefer_pattern_matching = true:error                             # Use pattern syntax in place of older idioms.
csharp_style_prefer_not_pattern = true:error                                  # Prefer is not pattern syntax.
csharp_style_prefer_extended_property_pattern = true:error                    # Prefer extended property patterns for nested checks.
csharp_style_prefer_switch_expression = true:error                            # Prefer switch expressions over switch statements.
csharp_style_prefer_null_check_over_type_check = true:error                   # Prefer direct null checks over type checks.
dotnet_style_prefer_conditional_expression_over_return = true:error           # Prefer conditional expressions over branching returns.
dotnet_style_prefer_conditional_expression_over_assignment = true:error       # Prefer conditional expressions over branching assignments.
dotnet_style_prefer_compound_assignment = true:error                          # Prefer compound assignments where equivalent.
dotnet_style_prefer_simplified_boolean_expressions = true:error               # Simplify boolean expressions to minimal form.
dotnet_style_prefer_simplified_interpolation = true:error                     # Simplify interpolation when format is unnecessary.
csharp_style_inlined_variable_declaration = true:error                        # Inline out variable declarations when possible.

# --- [MODERN_SYNTAX_AND_CONCISION] ------------------------------------------
